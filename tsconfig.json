{
  "compilerOptions": {
    "lib": [
      "dom",
      "es6",
      "es7"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "."
  },

  "exclude": [
    "node_modules",
    "test",
    "tools",
    "**/*spec.ts",
    "dist"
  ]
}